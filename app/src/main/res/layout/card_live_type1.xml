<?xml version="1.0" encoding="utf-8"?>
<!-- type basketball-->
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="4dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semi Finals - 1"
            android:textSize="18sp"
            android:textColor="#00FF00"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/scoreA"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textvs"
            app:layout_constraintTop_toTopOf="@+id/textvs"
            app:layout_constraintBottom_toBottomOf="@+id/textvs" />
        <TextView
            android:id="@+id/scoreB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28sp"
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textvs"
            app:layout_constraintTop_toTopOf="@+id/textvs"
            app:layout_constraintBottom_toBottomOf="@+id/textvs" />
        <TextView
            android:id="@+id/teamA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/scoreA"
            app:layout_constraintEnd_toEndOf="@+id/scoreA"
            app:layout_constraintTop_toBottomOf="@+id/scoreA"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/teamB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Team B"
            android:textSize="20sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/scoreB"
            app:layout_constraintEnd_toEndOf="@+id/scoreB"
            app:layout_constraintTop_toBottomOf="@+id/scoreB"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>