<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"

    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        app:srcCompat="@drawable/gradient_color_square"
        tools:layout_editor_absoluteX="360dp" />

    <TextView
        android:id="@+id/morename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserratbold"
        android:text="@string/fest_name"
        android:textAlignment="center"
        android:textColor="@color/topbar_textcolor"
        android:textSize="30sp" />

    <ScrollView
        android:background="@drawable/text_card_cornor_bg"
        android:layout_marginTop="-80sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/tv_display"
            android:padding="8dp"
            android:textColor="@color/textColor"
            android:breakStrategy="simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:textSize="18sp"
            tools:text="@string/directions"

            />

    </ScrollView>

</RelativeLayout>