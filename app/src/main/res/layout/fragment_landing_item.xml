<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/landing_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/landing_linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/landing_linear_1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-96dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/cardview_background_dark"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/landing_item_icon_2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:tint="@color/topbar_textcolor"
            app:srcCompat="@drawable/aboutus"

            />

        <TextView
            android:id="@+id/landing_card_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/landing_linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cardview_background"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/landing_item_icon_1"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:tint="@color/topbar_textcolor"
            app:srcCompat="@drawable/aboutus"

            />

        <TextView
            android:id="@+id/landing_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/topbar_textcolor"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>