<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="23dp">
        <TextView
            android:id="@+id/pos1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Winner - (Team Name)"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserratmedium" />
        <TextView
            android:id="@+id/pos2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Runners up - (Team Name)"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/pos1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserratmedium" />
        <TextView
            android:id="@+id/pos3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2nd Runners up - (Team Name)"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/pos2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserratmedium" />

    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text="Skating Boys"
        android:gravity="center"
        android:textSize="20sp"
        android:elevation="2dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:fontFamily="@font/montserratbold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>