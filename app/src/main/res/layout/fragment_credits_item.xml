<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/credits_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingLeft="20dp"
        android:paddingStart="16dp"
        tools:text="Developers"
        android:textColor="@color/textColor"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.jaouan.compoundlayout.RadioLayoutGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:orientation="horizontal">

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/profile_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/profile_icon"
                    tools:ignore="ContentDescription" />
            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/profile_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CCCCCC"
                    tools:src="@drawable/profile_icon"
                    tools:ignore="ContentDescription" />

            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/profile_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/profile_icon"
                    tools:ignore="ContentDescription" />
            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

        </com.jaouan.compoundlayout.RadioLayoutGroup>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/credits_devname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Ashwik Reddy"
            android:textColor="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="5dp">

            <Button
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/credit_button1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:background="@drawable/ic_facebook"
                android:padding="5dp"
                android:layout_marginRight="12dp" />

            <Button
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/credit_button2"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:background="@drawable/ic_github_black"
                android:padding="5dp"
                android:layout_marginRight="12dp" />

            <Button
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/credit_button3"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:background="@drawable/ic_linkedin"
                android:padding="5dp"
                android:layout_marginRight="12dp" />

            <Button
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/credit_button4"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:background="@drawable/ic_behance"
                android:padding="5dp"
                android:layout_marginRight="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>